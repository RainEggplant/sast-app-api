{
  "name": "sast-app-api",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon",
    "build": "tsc --outDir build",
    "serve": "NODE_ENV=production node build/index.js",
    "debug": "nodemon --exitcrash --inspect=5858 --exec node -r ts-node/register ./src/index.ts"
  },
  "dependencies": {
    "bcrypt": "^3.0.3",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "express": "^4.16.0",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "mkdirp": "^0.5.1",
    "mongoose": "^5.4.6",
    "morgan": "^1.9.0",
    "multer": "^1.4.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.4",
    "@types/debug": "0.0.31",
    "@types/express": "^4.16.1",
    "@types/helmet": "0.0.42",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mkdirp": "^0.5.2",
    "@types/mongoose": "^5.3.9",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/uuid": "^3.4.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.1",
    "ts-node": "^8.0.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "env": {
      "DEBUG": "sast-app-api"
    },
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "ts-node src/index.ts"
  }
}
